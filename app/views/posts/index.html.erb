<p id="notice"><%= notice %></p>

<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

  <% @posts.each do |post| %>
    <div class="post-preview">
      <%content = raw("<h2 class='post-title'> #{post.title} </h2> <h3 class='post-subtitle'> #{post.body} </h3>")%>
      <%= link_to content, post %>
      <p class="post-meta">Posted by <a href="#">Admin</a>  at <%= post.created_at%></p>
    </div>
    <hr>
  <% end %>

  <!-- Pager -->
  <ul class="pager">
      <li class="next">
          <% np_arrow = raw("New Post &rarr;") %>
          <%= link_to np_arrow, new_post_path %>
      </li>
  </ul>

</div>
